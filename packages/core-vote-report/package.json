    },
    "dependencies": {
        "@arkecosystem/core-kernel": "^3.0.0-next.0",
        "@arkecosystem/core-http-utils": "^3.0.0-next.0",
        "@arkecosystem/core-utils": "^3.0.0-next.0",
        "@arkecosystem/crypto": "^3.0.0-next.0",
        "handlebars": "^4.1.2",
        "vision": "^5.4.4"
    },
    "devDependencies": {
        "@types/vision": "^5.3.6"
    },
    "engines": {
        "node": ">=10.x"
    },
    "publishConfig": {
        "access": "public"
    }
}
